{% render 'footer' with {
    settings: section.settings
} %}

{% schema %}
    {
        "name": "Footer",
        "settings": [
            {
                "type": "text",
                "id": "copyright_text",
                "label": "Copyright Text",
                "default": "kidibra, shopify theme developer"
            },
            {
                "type": "text",
                "id": "footer_head",
                "label": "Footer head",
                "default": "Links"
            },
            {
                "type": "link_list",
                "id": "footer_link",
                "label": "Footer link"
            },
            {
                "type": "text",
                "id": "newsletter_title",
                "label": "News title",
                "default": "Your title"
            }
        ]
    }
{% endschema %}